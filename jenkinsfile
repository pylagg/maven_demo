pipeline{
	agent any
	tools{
	maven 'MAVEN_HOME'
	}
	
   environment {
    registry = "pylagg/first_repo"
	registryCredential = 'docker_hub'
}

	    stages {
        	stage("Code Checkout") {
                     steps {
                	git branch: 'master',
                	url: 'https://github.com/pylagg/maven_demo.git'
                  }
              }
	      stage('Build Stage')
		{
			steps{
				bat 'mvn package'
			}
		}
		
		stage('Compile Stage')
		{
			steps{
				 bat 'mvn compile'
			}
		}
		stage('Testing Stage')
		{
			steps{
				 bat 'mvn test'
			}
		}
		                       
         	stage('build && SonarQube analysis') 
		{
            		steps {
                		withSonarQubeEnv('sonar') {
                                     		bat 'mvn sonar:sonar'
                		}
            		}
        	}    
		stage('Deploy artifact using maven')
		{
			steps{
			bat 'mvn deploy'
			stash name: 'war', includes: '**/*.war'
			
			}
		}
		       
		stage('Deploy to tomcat')
		{
			steps{
			bat "copy target\\HelloWorld.war \"C:\\Users\\Payal\\Software\\New folder\\apache-tomcat-8.5.53\\webapps\""
			}
		}		
		stage('Building image') {
 			 agent {
			 label 'slave_docker'
			 }
			 steps{
				unstash 'war'
				sh 'docker build -t pylagg/first_repo:image2 .'
			}
  		}
		stage('Deploy image') {
			agent {
			label 'slave_docker'
			}
			steps{
				sh 'docker push pylagg/first_repo:image2'
			}
		}
		stage('Run container'){
			agent {
			label 'slave_docker'
			}
			steps{
				sh 'docker stop $(docker ps -a -q)'
				sh 'docker run -d -p 81:8080 pylagg/first_repo:image2'
			}
		}
		
  }  

	post {
		 
   		 failure {
      			  mail to: 'pk1932ag@gmail.com',
             		subject: "Failed Pipeline: ${currentBuild.fullDisplayName}",
             		body: "Something is wrong with ${env.BUILD_URL}"
    		}
		success{
      			  mail to: 'pk1932ag@gmail.com',
             		subject: "Success Pipeline: ${currentBuild.fullDisplayName}",
             		body: "Congratulations ${env.BUILD_URL}"
    		}
		}
	
}
